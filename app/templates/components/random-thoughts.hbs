{{yield}}

<div class="well well-sm">
  <p class="lead">{{thoughts}}</p>
</div>

<small>
Character Count: <strong>{{thoughts.length}}</strong>
</small>

<hr>

<button type="button" class="btn btn-primary" {{action 'changeThoughts'}}>More Thoughts</button>
<button type="button" class="btn btn-info" {{action 'addFavorite' thoughts}}>Add Favorite</button>

<hr />
{{#if favorites}}
  <h4>Favorites</h4>
  <ul class="list-group">
  {{#each favorites as |fav|}}
    <li class="list-group-item">
      <ul class="list-inline">
        <li>
          <button type="button" class="btn btn-danger btn-xs" {{action 'removeFavorite' fav}}>
            Remove
          </button>
        </li>
        <li>
          {{fav}}
        </li>
      </ul>
    </li>
  {{/each}}
  </ul>
{{/if}}
